{
    "manifest_version": 3,
    "name": "HireGuard",
    "version": "1.0",
    "description": "Analyze job postings and emails to detect scams",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
}